@model server.Models.Review

@{
	ViewData["Title"] = "Delete";
}


<h1>Are you sure you want to delete @Html.DisplayFor(model => model.Name)'s review?</h1>
<hr />
<div class="card w-100 review" id="search-div">
	<div class="card-body">

		<span class="card-text">
			@for (int i = 0; i < Model.Rate; i++)
			{
				<img src="~/images/star.png" alt="star" width="20">
			}
			@for (int i = 0; i < 5 - Model.Rate; i++)
			{
				<img src="~/images/star-nofill.png" alt="star" width="20">
			}

		</span>
		<h4 class="card-title">@Html.DisplayFor(model => model.Name)</h4>
		<p class="card-text">@Html.DisplayFor(model => model.Content)</p>
		<span class="card-text">@Html.DisplayFor(model => model.Date)</span>
		<hr />
		<div>
			<form asp-action="Delete">
				<input type="hidden" asp-for="Id" />
				<input type="submit" value="Delete" class="btn btn-danger" /> |
				<a class="link" asp-action="Index">Back to List</a>
			</form>
		</div>
	</div>
</div>
@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<link href="~/css/DeleteStyle.css" rel="stylesheet" />
}